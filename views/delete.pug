extends layout

block content
  .container
    .row
      .col-md-8.offset-md-2
        h1 Delete Contact
        h2 #{contact.firstName} #{contact.lastName}
        p.text-danger Are you sure you want to delete this contact?
        form(action=`/${contact.id}/delete`, method='post')
          button.btn.btn-danger(type='submit') Yes!
          a(href=`/${contact.id}`).btn.btn-link Nevermind
